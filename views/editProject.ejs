<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#0a0a0a" />
    <title>Edit Project - NikeCode Admin</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #0a0a0a 0%, #1a1a2e 100%);
            min-height: 100vh;
            padding: 0;
            margin: 0;
            color: #fff;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 2rem 1rem;
        }

        form {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            padding: 2.5rem;
            border-radius: 20px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        h1 {
            text-align: center;
            color: #fff;
            margin-bottom: 2rem;
            font-size: 2rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        label {
            font-weight: 600;
            display: block;
            margin-bottom: 0.5rem;
            color: #b8b8b8;
            font-size: 0.95rem;
        }

        input,
        textarea,
        select {
            width: 100%;
            padding: 12px 16px;
            border-radius: 10px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            background: rgba(255, 255, 255, 0.05);
            color: #fff;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        input:focus,
        textarea:focus,
        select:focus {
            outline: none;
            border-color: #667eea;
            background: rgba(102, 126, 234, 0.1);
            box-shadow: 0 0 20px rgba(102, 126, 234, 0.2);
        }

        textarea {
            resize: vertical;
            min-height: 120px;
        }

        .current-image {
            width: 100%;
            max-height: 200px;
            object-fit: cover;
            border-radius: 10px;
            margin-top: 0.5rem;
            border: 2px solid rgba(102, 126, 234, 0.3);
        }

        .file-input-wrapper {
            position: relative;
            overflow: hidden;
            display: inline-block;
            width: 100%;
        }

        .file-input-wrapper input[type=file] {
            position: absolute;
            left: -9999px;
        }

        .file-input-label {
            display: block;
            padding: 12px 16px;
            background: rgba(102, 126, 234, 0.15);
            border: 2px dashed rgba(102, 126, 234, 0.5);
            border-radius: 10px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
            color: #667eea;
            font-weight: 500;
        }

        .file-input-label:hover {
            background: rgba(102, 126, 234, 0.25);
            border-color: #667eea;
        }

        button {
            width: 100%;
            padding: 14px;
            border-radius: 10px;
            border: none;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 1rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        button:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(102, 126, 234, 0.4);
        }

        .tools-container {
            background: rgba(255, 255, 255, 0.03);
            padding: 1rem;
            border-radius: 10px;
            margin-top: 0.5rem;
        }

        .tool-input-group {
            display: flex;
            gap: 8px;
            margin-bottom: 10px;
        }

        .tool-input-group input {
            flex: 1;
        }

        .btn-secondary {
            background: rgba(255, 255, 255, 0.1);
            color: #fff;
            width: auto;
            padding: 8px 16px;
            font-size: 0.9rem;
        }

        .btn-danger {
            background: #e74c3c;
            color: white;
            width: auto;
            padding: 6px 12px;
            font-size: 0.85rem;
            margin-left: 8px;
        }

        .tools-list {
            list-style: none;
            padding: 0;
            margin-top: 1rem;
        }

        .tools-list li {
            background: rgba(102, 126, 234, 0.15);
            padding: 10px 14px;
            margin-bottom: 8px;
            border-radius: 8px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border: 1px solid rgba(102, 126, 234, 0.3);
        }

        .tools-list li span {
            color: #fff;
            font-weight: 500;
        }

        @media (max-width: 600px) {
            form {
                padding: 1.5rem;
            }

            h1 {
                font-size: 1.5rem;
            }
        }
    </style>
</head>

<body>
    <%- include('header') %>
    <div class="container">
        <form action="/admin/projects/edit/<%= project._id %>" method="POST" enctype="multipart/form-data">
            <h1>‚úèÔ∏è Edit Project: <%= project.appName || project.name %></h1>

            <div class="form-group">
                <label>üì± Application Type:</label>
                <select name="appType" id="appType" required onchange="toggleAPKField()">
                    <option value="Web App" <%= project.applicationType === 'Web App' ? 'selected' : '' %>>Web App</option>
                    <option value="Mobile App" <%= project.applicationType === 'Mobile App' ? 'selected' : '' %>>Mobile App</option>
                    <option value="Desktop App" <%= project.applicationType === 'Desktop App' ? 'selected' : '' %>>Desktop App</option>
                    <option value="API Service" <%= project.applicationType === 'API Service' ? 'selected' : '' %>>API Service</option>
                    <option value="Game" <%= project.applicationType === 'Game' ? 'selected' : '' %>>Game</option>
                </select>
            </div>

            <div class="form-group">
                <label>üè∑Ô∏è App Name:</label>
                <input type="text" name="appName" value="<%= project.appName || project.name %>" required>
            </div>

            <div class="form-group">
                <label>üìù Description:</label>
                <textarea name="description" required><%= project.description %></textarea>
            </div>

            <div class="form-group">
                <label>üõ†Ô∏è Tools Used:</label>
                <div class="tools-container">
                    <div class="tool-input-group">
                        <input type="text" id="toolInput" placeholder="Enter tool name" />
                        <button type="button" class="btn-secondary" onclick="addTool()">+ Add</button>
                    </div>
                    <ul id="toolsList" class="tools-list"></ul>
                </div>
                <input type="hidden" name="tools" id="toolsHidden" value='<%= JSON.stringify(project.tools || []) %>'>
            </div>

            <div class="form-group">
                <label>üåê Project Link:</label>
                <input type="url" name="projectLink" value="<%= project.projectLink || '' %>" placeholder="https://example.com">
            </div>

            <div class="form-group">
                <label>üì∑ Current Image:</label>
                <% if (project.image) { %>
                    <img src="<%= project.image %>" alt="Current project image" class="current-image" />
                <% } else { %>
                    <p style="color: #888; font-style: italic;">No image uploaded</p>
                <% } %>
            </div>

            <div class="form-group">
                <label>üîÑ Change Image (Optional):</label>
                <div class="file-input-wrapper">
                    <input type="file" name="projectImage" id="imageInput" accept="image/*">
                    <label for="imageInput" class="file-input-label">Choose New Image</label>
                </div>
            </div>

            <div class="form-group" id="apkGroup" style="display: <%= project.applicationType === 'Mobile App' ? 'block' : 'none' %>;">
                <label>üì± Current APK:</label>
                <% if (project.apkFile) { %>
                    <p style="color: #667eea; margin: 0.5rem 0;">
                        <a href="<%= project.apkFile %>" target="_blank" style="color: #667eea; text-decoration: none;">
                            üì• Download Current APK
                        </a>
                    </p>
                <% } else { %>
                    <p style="color: #888; font-style: italic; margin: 0.5rem 0;">No APK file uploaded</p>
                <% } %>
                <label style="margin-top: 1rem;">üîÑ Change APK File (Optional):</label>
                <div class="file-input-wrapper">
                    <input type="file" name="apkFile" id="apkInput" accept=".apk" />
                    <label for="apkInput" class="file-input-label">Choose New APK File (.apk)</label>
                </div>
                <small style="color: #888; font-size: 0.85rem; margin-top: 0.5rem; display: block;">Max size: 100MB</small>
            </div>

            <button type="submit">üíæ Update Project</button>
        </form>
    </div>

    <script>
        const tools = <%- JSON.stringify(project.tools || []) %>;
        
        function initTools() {
            renderTools();
        }

        function addTool() {
            const input = document.getElementById("toolInput");
            const value = input.value.trim();
            if (value === "") {
                alert("Please enter a tool name");
                return;
            }
            if (tools.includes(value)) {
                alert("This tool is already added");
                return;
            }

            tools.push(value);
            input.value = "";
            renderTools();
        }

        function removeTool(index) {
            tools.splice(index, 1);
            renderTools();
        }

        function renderTools() {
            const list = document.getElementById("toolsList");
            list.innerHTML = "";
            tools.forEach((tool, i) => {
                const li = document.createElement("li");
                li.innerHTML = `<span>${tool}</span> <button type="button" class="btn-danger" onclick="removeTool(${i})">‚úï</button>`;
                list.appendChild(li);
            });
            document.getElementById("toolsHidden").value = JSON.stringify(tools);
        }

        // Initialize tools on page load
        window.onload = initTools;

        // Allow Enter key to add tool
        document.getElementById("toolInput").addEventListener("keypress", function(e) {
            if (e.key === "Enter") {
                e.preventDefault();
                addTool();
            }
        });

        // Toggle APK field based on application type
        function toggleAPKField() {
            const appType = document.getElementById("appType").value;
            const apkGroup = document.getElementById("apkGroup");
            const apkInput = document.getElementById("apkInput");
            
            if (appType === "Mobile App") {
                apkGroup.style.display = "block";
            } else {
                apkGroup.style.display = "none";
                apkInput.value = "";
            }
        }
    </script>
</body>

</html>
