<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#0a0a0a" />
    <title>Add New Project - NikeCode Admin</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #0a0a0a 0%, #1a1a2e 100%);
            min-height: 100vh;
            padding: 0;
            margin: 0;
            color: #fff;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 2rem 1rem;
        }

        form {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            padding: 2.5rem;
            border-radius: 20px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        h2 {
            text-align: center;
            color: #fff;
            margin-bottom: 2rem;
            font-size: 2rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        label {
            font-weight: 600;
            display: block;
            margin-bottom: 0.5rem;
            color: #b8b8b8;
            font-size: 0.95rem;
        }

        input,
        textarea,
        select {
            width: 100%;
            padding: 12px 16px;
            border-radius: 10px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            background: rgba(255, 255, 255, 0.05);
            color: #fff;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        input:focus,
        textarea:focus,
        select:focus {
            outline: none;
            border-color: #667eea;
            background: rgba(102, 126, 234, 0.1);
            box-shadow: 0 0 20px rgba(102, 126, 234, 0.2);
        }

        input::placeholder,
        textarea::placeholder {
            color: #666;
        }

        textarea {
            resize: vertical;
            min-height: 100px;
        }

        button {
            width: 100%;
            padding: 14px;
            border-radius: 10px;
            border: none;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 1rem;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(102, 126, 234, 0.4);
        }

        .btn-secondary {
            background: rgba(255, 255, 255, 0.1);
            color: #fff;
            width: auto;
            padding: 8px 16px;
            font-size: 0.9rem;
        }

        .btn-secondary:hover {
            background: rgba(255, 255, 255, 0.2);
        }

        .btn-danger {
            background: #e74c3c;
            color: white;
            width: auto;
            padding: 6px 12px;
            font-size: 0.85rem;
            margin-left: 8px;
        }

        .btn-danger:hover {
            background: #c0392b;
        }

        #imagePreview {
            display: none;
            width: 100%;
            max-height: 250px;
            object-fit: cover;
            margin-top: 1rem;
            border-radius: 10px;
            border: 2px solid rgba(102, 126, 234, 0.3);
        }

        .tools-container {
            background: rgba(255, 255, 255, 0.03);
            padding: 1rem;
            border-radius: 10px;
            margin-top: 0.5rem;
        }

        .tool-input-group {
            display: flex;
            gap: 8px;
            margin-bottom: 10px;
        }

        .tool-input-group input {
            flex: 1;
        }

        .tools-list {
            list-style: none;
            padding: 0;
            margin-top: 1rem;
        }

        .tools-list li {
            background: rgba(102, 126, 234, 0.15);
            padding: 10px 14px;
            margin-bottom: 8px;
            border-radius: 8px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border: 1px solid rgba(102, 126, 234, 0.3);
        }

        .tools-list li span {
            color: #fff;
            font-weight: 500;
        }

        .file-input-wrapper {
            position: relative;
            overflow: hidden;
            display: inline-block;
            width: 100%;
        }

        .file-input-wrapper input[type=file] {
            position: absolute;
            left: -9999px;
        }

        .file-input-label {
            display: block;
            padding: 12px 16px;
            background: rgba(102, 126, 234, 0.15);
            border: 2px dashed rgba(102, 126, 234, 0.5);
            border-radius: 10px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
            color: #667eea;
            font-weight: 500;
        }

        .file-input-label:hover {
            background: rgba(102, 126, 234, 0.25);
            border-color: #667eea;
        }

        .btn-primary:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }

        .loading-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.8);
            backdrop-filter: blur(5px);
            z-index: 9999;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

        .loading-overlay.active {
            display: flex;
        }

        .spinner {
            border: 4px solid rgba(102, 126, 234, 0.3);
            border-top: 4px solid #667eea;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            animation: spin 1s linear infinite;
            margin-bottom: 20px;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .loading-message {
            color: #fff;
            font-size: 1.2rem;
            text-align: center;
            margin-top: 10px;
        }

        .loading-details {
            color: #b8b8b8;
            font-size: 0.9rem;
            margin-top: 10px;
            text-align: center;
        }

        @media (max-width: 600px) {
            form {
                padding: 1.5rem;
            }

            h2 {
                font-size: 1.5rem;
            }
        }
    </style>
</head>

<body>
    <%- include('header') %>
    <div class="loading-overlay" id="loadingOverlay">
        <div class="spinner"></div>
        <div class="loading-message">Uploading project...</div>
        <div class="loading-details" id="loadingDetails">Please wait, this may take a moment for large files.</div>
    </div>
    <div class="container">
        <form action="/admin/add-project" method="POST" enctype="multipart/form-data" id="projectForm">
            <h2>‚ú® Add New Project</h2>

            <div class="form-group">
                <label>üì∑ Project Image:</label>
                <div class="file-input-wrapper">
                    <input type="file" name="projectImage" accept="image/*" id="imageInput" onchange="previewImage(event)" required />
                    <label for="imageInput" class="file-input-label">Choose Image File</label>
                </div>
                <img id="imagePreview" alt="Preview" />
            </div>

            <div class="form-group">
                <label>üì± Application Type:</label>
                <select name="appType" id="appType" required>
                    <option value="">Select type</option>
                    <option value="Web App">Web App</option>
                    <option value="Mobile App">Mobile App</option>
                    <option value="Desktop App">Desktop App</option>
                    <option value="API Service">API Service</option>
                    <option value="Game">Game</option>
                </select>
            </div>

            <div class="form-group">
                <label>üè∑Ô∏è App Name:</label>
                <input type="text" name="appName" placeholder="Enter app name" required />
            </div>

            <div class="form-group">
                <label>üìù Description:</label>
                <textarea name="description" rows="5" placeholder="Enter detailed description" required></textarea>
            </div>

            <div class="form-group">
                <label>üõ†Ô∏è Tools Used:</label>
                <div class="tools-container">
                    <div class="tool-input-group">
                        <input type="text" id="toolInput" placeholder="Enter tool name (e.g., React, Node.js)" />
                        <button type="button" class="btn-secondary" onclick="addTool()">+ Add</button>
                    </div>
                    <ul id="toolsList" class="tools-list"></ul>
                </div>
                <input type="hidden" name="tools" id="toolsHidden" />
            </div>

            <div class="form-group" id="projectLinkGroup">
                <label>üåê Project Link (URL):</label>
                <input type="url" name="projectLink" id="projectLink" placeholder="https://example.com" pattern="https?://.+" title="Please enter a valid URL" required />
            </div>

            <button type="submit" class="btn-primary" id="submitBtn">üöÄ Add Project</button>
        </form>
    </div>

    <script>
        const tools = [];
        let isSubmitting = false;

        function addTool() {
            const input = document.getElementById("toolInput");
            const value = input.value.trim();
            if (value === "") {
                alert("Please enter a tool name");
                return;
            }
            if (tools.includes(value)) {
                alert("This tool is already added");
                return;
            }

            tools.push(value);
            input.value = "";
            renderTools();
        }

        function removeTool(index) {
            tools.splice(index, 1);
            renderTools();
        }

        function renderTools() {
            const list = document.getElementById("toolsList");
            list.innerHTML = "";
            tools.forEach((tool, i) => {
                const li = document.createElement("li");
                li.innerHTML = `<span>${tool}</span> <button type="button" class="btn-danger" onclick="removeTool(${i})">‚úï</button>`;
                list.appendChild(li);
            });
            document.getElementById("toolsHidden").value = JSON.stringify(tools);
        }

        function previewImage(event) {
            const image = document.getElementById("imagePreview");
            const file = event.target.files[0];
            if (file) {
                image.src = URL.createObjectURL(file);
                image.style.display = "block";
            }
        }

        // Allow Enter key to add tool
        document.getElementById("toolInput").addEventListener("keypress", function(e) {
            if (e.key === "Enter") {
                e.preventDefault();
                addTool();
            }
        });

        // Handle form submission with loading indicator
        document.getElementById("projectForm").addEventListener("submit", function(e) {
            const submitBtn = document.getElementById("submitBtn");
            const loadingOverlay = document.getElementById("loadingOverlay");
            const loadingDetails = document.getElementById("loadingDetails");

            // Prevent double submission
            if (isSubmitting) {
                e.preventDefault();
                return false;
            }
            isSubmitting = true;

            // Show loading overlay
            loadingDetails.textContent = "Uploading project... Please wait.";
            loadingOverlay.classList.add("active");
            submitBtn.disabled = true;
            submitBtn.textContent = "‚è≥ Uploading...";
        });
    </script>
</body>

</html>
